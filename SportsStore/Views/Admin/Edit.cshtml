@model Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "_AdminLayout";
}
<form method="post" asp-action="Edit">
    <input asp-for="@Model.ProductId" type="hidden" value="@Model.ProductId">
    <div class="form-group">
        <label asp-for="@Model.Name" class="text-center"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input type="text" class="form-control" asp-for="@Model.Name">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description" class="text-center"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea class="form-control" asp-for="@Model.Description"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Category" class="text-center"></label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <input type="text" class="form-control" asp-for="@Model.Category">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Price" class="text-center"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input type="text" class="form-control" asp-for="@Model.Price">
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</form>