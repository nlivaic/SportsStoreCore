@model Order

<h2>Checkout</h2>
<p>Please enter your details, so we can ship your order to you!</p>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <h3>Ship To</h3>
    <div class="form-group">
        <label>Name:</label><input class="form-control" asp-for="Name">
    </div>
    <h3>Address</h3>
    <div class="form-group">
        <label>Line1:</label><input class="form-control" asp-for="Line1">
    </div>
    <div class="form-group">
        <label>Line2:</label><input class="form-control" asp-for="Line2">
    </div>
    <div class="form-group">
        <label>Line3:</label><input class="form-control" asp-for="Line3">
    </div>
    <div class="form-group">
        <label>City:</label><input class="form-control" asp-for="City">
    </div>
    <div class="form-group">
        <label>State:</label><input class="form-control" asp-for="State">
    </div>
    <div class="form-group">
        <label>Zip:</label><input class="form-control" asp-for="ZipCode">
    </div>
    <div class="form-group">
        <label>Country:</label><input class="form-control" asp-for="Country">
    </div>
    <h3>Options</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> Gift wrap these items
        </label>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Complete Order</button>
    </div>
</form>